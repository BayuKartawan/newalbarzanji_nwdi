<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemcard_tentang_on"
        style="@style/CardTentang"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/playfairdisplay_medium"
        android:text="Teks Sample" />

    <TextView
        android:id="@+id/itemcard_tentang_off"
        android:layout_height="wrap_content"
        style="@style/CardTentang"
        android:justificationMode="inter_word"
        android:background="@drawable/latar_button_tentang2"
        android:text="Teks Sample" />

</LinearLayout>