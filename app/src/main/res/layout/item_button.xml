<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item"
        style="@style/theme_color_backgroundTombol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        tools:ignore="KeyboardInaccessibleWidget,TouchTargetSizeCheck">

        <LinearLayout
            style="@style/layout_heigh_width_mm"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">
            <TextView
                android:id="@+id/button_item"
                style="@style/warna_teks_itembutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/teks_sample"
                android:textAlignment="viewStart"
                android:textSize="16sp" />
            <ImageView
                style="@style/layout_heigh_width_ww"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:src="@drawable/icon_go" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
