<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    style="@style/card_view_teks"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_teks_on"
            style="@style/CardTeks"
            android:fontFamily="@font/scheherazadenew_medium"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/card_teksarab"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/card_teks_off"
            style="@style/CardTeks"
            android:text="@string/card_teksindo"
            android:textSize="16sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
