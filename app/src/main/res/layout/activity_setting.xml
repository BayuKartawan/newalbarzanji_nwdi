<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/layout_heigh_width_mm"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setelan"
        style="@style/toolbar_global"
        app:navigationIcon="@drawable/icon_kembali"
        app:title="Setelan" />

    <FrameLayout
        style="@style/bg_tema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp">

        <LinearLayout
            style="@style/layout_heigh_width_mm"
            android:orientation="vertical">

            <TextView
                style="@style/teks_headerseek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Ukuran Font Halaman Baca"
                android:textSize="16sp" />

            <View
                style="@style/bg_viewseek"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                style="@style/teks_anakseek"
                android:layout_marginTop="20dp"
                android:text="Ukuran font arab ( Rekomendasi 30 )" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekbar_font_size_text_on"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:max="40"
                    android:progress="30" />

                <TextView
                    android:id="@+id/textview_font_size_valueon"
                    style="@style/teks_anakseek"
                    android:text="30" />
            </LinearLayout>

            <TextView
                style="@style/teks_anakseek"
                android:layout_marginTop="20dp"
                android:text="Ukuran font terjemah ( Rekomendasi 16 )" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekbar_font_size_text_off"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:max="40"
                    android:progress="16" />

                <TextView
                    android:id="@+id/textview_font_size_valueoff"
                    style="@style/teks_anakseek"
                    android:text="16" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <Switch
        android:id="@+id/switch1"
        style="@style/bg_tema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:text="@string/teks_tema"
        android:textSize="16sp"
        tools:ignore="HardcodedText,MissingConstraints,TouchTargetSizeCheck,UseSwitchCompatOrMaterialXml,VisualLintButtonSize" />
</LinearLayout>