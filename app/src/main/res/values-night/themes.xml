<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.NewAlBarzanji" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/mode_malam</item>
        <item name="android:statusBarColor">#0B141B</item>
    </style>

    <!--    warna font -->
    <style name="color_font_theme">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- layout intro -->

    <style name="card_view_teks">
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">#5C5C5C</item>
    </style>

    <!--    Card Teks-->
    <style name="CardTeks">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <!--  style toolbar  -->
    <style name="toolbar_global">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTittleTextAppearance</item>
    </style>

    <!--    navbar-->
    <style name="navbarstyle">
        <item name="itemIconTint">@color/nav_item_color_selectornight</item>
        <item name="android:background">@color/mode_malam</item>
    </style>

</resources>