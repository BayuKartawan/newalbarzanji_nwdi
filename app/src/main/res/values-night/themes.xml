<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.NewAlBarzanji" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/mode_malam</item>
        <item name="android:statusBarColor">@color/mode_malam</item>
        <item name="android:navigationBarColor">@color/mode_malam</item>
    </style>

    <!--    warna font -->
    <style name="color_font_theme">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- layout intro -->


    <!--    Card Teks-->
    <style name="CardTeks">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <!--  style toolbar  -->
    <style name="toolbar_detail">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/mode_malam</item>
    </style>

    <style name="toolbar_global">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/mode_malam</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTittleTextAppearance</item>
    </style>

    <!--    navbar-->
    <style name="navbarstyle">
        <item name="itemIconTint">@color/nav_item_color_selectornight</item>
        <item name="android:background">@color/mode_malam</item>
    </style>


    <!-- Theme background teks -->

    <style name="theme_color_backgroundStroke">
        <item name="android:background">@color/mode_malam2</item>
    </style>

    <!-- Theme background tombol -->
    <style name="theme_color_backgroundTombol">
        <item name="cardBackgroundColor">@color/mode_malam2</item>
    </style>

    <!--    card tentang-->
    <style name="color_bg_tentang">
        <item name="cardBackgroundColor">@color/mode_malam2</item>
    </style>

    <style name="CardTentang">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="color_bg_tentangheader">
        <item name="android:background">@color/mode_malam</item>
    </style>

    <!--    item button-->
    <style name="warna_teks_itembutton">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--    scroll bar -->
    <style name="scroll_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarThumbVertical">@color/mode_malam2</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    <!--  setting  -->
    <style name="bg_tema">
        <item name="android:background">@color/mode_malam2</item>
    </style>
    <style name="bg_viewseek">
        <item name="android:background">@color/white</item>
    </style>
    <style name="teks_headerseek">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="teks_anakseek">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>