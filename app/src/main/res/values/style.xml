<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="gaya1">
        <item name="backgroundColor">#F8E4B7</item>
        <item name="color">#F8E4B7</item>
    </style>

    <style name="txtPoppinslight13_1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight" tools:targetApi="p">300</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ToolbarTittleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/playfairdisplay_medium</item>
        <item name="android:textSize">16sp</item>

    </style>

    <!-- Style ini saya gunakan di navigasi bar, jika tombol active-->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
        <item name="itemIconTint">@color/hijau</item>
        <item name="android:fontFamily">@font/playfairdisplay_medium</item>
    </style>

    <!--    Card Teks-->
    <style name="CardTeks">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="background">@drawable/bg_intro_1</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <!--  Card Tentang  -->
    <style name="CardTentang">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/latar_button_tentang1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  INTROO STYLE  -->
    <style name="style_intro_footerbawah">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/playfairdisplay_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="intro_framelayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <!--  style global  -->
    <style name="layout_heigh_width_00">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="layout_heigh_width_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_heigh_width_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  style toolbar  -->
    <style name="toolbar_global">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/hijau</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTittleTextAppearance</item>
    </style>
</resources>